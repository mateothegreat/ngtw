{
    "name": "app",
    "version": "0.0.0",
    "scripts": {
        "build": "ng build",
        "ng": "ng",
        "lint": "npm run lint:format && npm run lint:fix",
        "lint:format": "prettier -w src",
        "lint:fix": "eslint src --fix",
        "start": "ng serve --port 4222",
        "watch": "ng build --watch --configuration development",
        "test": "ng test",
        "release:range": "cd projects/range && npm version patch && cd ../../ && ng build range && cd dist/* && npm publish --access=public",
        "release:dropdown": "cd projects/dropdown && npm version patch && cd ../../ && ng build range && cd dist/* && npm publish --access=public"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^15.0.0",
        "@angular/common": "^15.0.0",
        "@angular/compiler": "^15.0.0",
        "@angular/core": "^15.0.0",
        "@angular/forms": "^15.0.0",
        "@angular/platform-browser": "^15.0.0",
        "@angular/platform-browser-dynamic": "^15.0.0",
        "@angular/router": "^15.0.0",
        "@popperjs/core": "^2.11.6",
        "date-fns": "^2.29.3",
        "js-beautify": "^1.14.7",
        "rxjs": "~7.5.0",
        "swiper": "^8.4.5",
        "tslib": "^2.3.0",
        "zone.js": "~0.12.0"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^15.0.2",
        "@angular/cli": "~15.0.2",
        "@angular/compiler-cli": "^15.0.0",
        "@mateothegreat/eslint-config": "^0.0.17",
        "@tailwindcss/forms": "^0.5.3",
        "@types/jasmine": "~4.3.0",
        "autoprefixer": "^10.4.13",
        "diffable-html": "^5.0.0",
        "jasmine-core": "~4.5.0",
        "karma": "~6.4.0",
        "karma-chrome-launcher": "~3.1.0",
        "karma-coverage": "~2.2.0",
        "karma-jasmine": "~5.1.0",
        "karma-jasmine-html-reporter": "~2.0.0",
        "ng-packagr": "^15.0.0",
        "postcss": "^8.4.19",
        "prettier": "^2.8.1",
        "tailwindcss": "^3.2.4",
        "tailwindcss-animate": "^1.0.5",
        "typescript": "~4.8.2"
    }
